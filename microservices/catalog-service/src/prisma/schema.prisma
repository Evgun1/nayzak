generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["driverAdapters"]
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_DATABASE_URL")
}

model Products {
    id                Int                 @id @default(autoincrement())
    title             String              @db.VarChar(255)
    price             Int
    createdAt         DateTime            @default(now())
    updatedAt         DateTime            @updatedAt
    description       String
    discount          Int
    status            ProductsStatus      @default(inStock)
    Media             Media[]
    Categories        Categories          @relation(fields: [categoriesId], references: [id])
    categoriesId      Int
    ProductsRating    ProductsRating?     @relation(fields: [productsRatingId], references: [id])
    productsRatingId  Int?                @unique
    Subcategories     Subcategories       @relation(fields: [subcategoriesId], references: [id])
    subcategoriesId   Int
    ProductsAttribute ProductsAttribute[]
}

model ProductsRating {
    id       Int       @id @default(autoincrement())
    avg      Int       @default(0)
    count    Int       @default(0)
    Products Products?
}

model Subcategories {
    id                   Int                    @id @default(autoincrement())
    title                String                 @db.VarChar(255)
    categoriesId         Int
    AttributeDefinitions AttributeDefinitions[]
    Media                Media[]
    Products             Products[]
    Categories           Categories             @relation(fields: [categoriesId], references: [id])
}

model Categories {
    id          Int             @id @default(autoincrement())
    title       String          @db.VarChar(255)
    Media       Media[]
    Products    Products[]
    Subcategory Subcategories[]
}

model AttributeDefinitions {
    id               Int                 @id @default(autoincrement())
    name             String
    type             String
    unit             String?
    subcategoriesId  Int
    Subcategories    Subcategories       @relation(fields: [subcategoriesId], references: [id])
    ProductAttribute ProductsAttribute[]

    @@unique([subcategoriesId, type])
}

model ProductsAttribute {
    id                     Int                  @id @default(autoincrement())
    attributeDefinitionsId Int
    productsId             Int?
    AttributeDefinitions   AttributeDefinitions @relation(fields: [attributeDefinitionsId], references: [id])
    Products               Products?            @relation(fields: [productsId], references: [id])
}

model Media {
    id              Int            @id @default(autoincrement())
    name            String
    src             String
    customersId     Int?
    categoriesId    Int?
    productsId      Int?
    subcategoriesId Int?
    Categories      Categories?    @relation(fields: [categoriesId], references: [id])
    Products        Products?      @relation(fields: [productsId], references: [id])
    Subcategories   Subcategories? @relation(fields: [subcategoriesId], references: [id])
}

enum ProductsStatus {
    outOfStock
    inStock
    discontinued
}
